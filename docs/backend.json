{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the AquaLens application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "createdAt"
      ]
    },
    "Analysis": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Analysis",
      "type": "object",
      "description": "Represents an image analysis job, its status, and its result.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user who requested the analysis."
        },
        "status": {
          "type": "string",
          "description": "The current status of the analysis job.",
          "enum": ["new", "processing", "complete", "error"]
        },
        "imageDataUri": {
          "type": "string",
          "description": "The base64 encoded data URI of the image to be analyzed."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp indicating when the analysis job was created."
        },
        "completedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp indicating when the analysis job was completed."
        },
        "result": {
          "$ref": "#/backend/entities/AnalysisResult"
        },
        "error": {
          "type": "string",
          "description": "Any error message if the analysis failed."
        }
      },
      "required": ["userId", "status", "imageDataUri", "createdAt"]
    },
    "AnalysisResult": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AnalysisResult",
      "type": "object",
      "description": "Represents the analysis results for a specific water sample.",
      "properties": {
        "analysisSummary": {
          "type": "string",
          "description": "A summary of the analysis, including highlighted microplastic particles, particle counts, and concentration estimates."
        },
        "particleTypes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "count": { "type": "number" },
              "percentage": { "type": "number" }
            },
            "required": ["type", "count", "percentage"]
          }
        },
        "polymerTypes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "count": { "type": "number" },
              "percentage": { "type": "number" }
            },
            "required": ["type", "count", "percentage"]
          }
        },
        "contaminationPercentage": { "type": "number" },
        "particleCount": { "type": "number" },
        "particles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "confidence": { "type": "number" },
              "class": { "type": "string" }
            },
            "required": ["x", "y", "confidence", "class"]
          }
        }
      },
      "required": [
        "analysisSummary",
        "particleTypes",
        "polymerTypes",
        "contaminationPercentage",
        "particleCount",
        "particles"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/analyses/{analysisId}",
        "definition": {
          "entityName": "Analysis",
          "schema": {
            "$ref": "#/backend/entities/Analysis"
          },
          "description": "Collection to store image analysis jobs and their results.",
          "params": [
            {
              "name": "analysisId",
              "description": "Unique identifier for the analysis job."
            }
          ]
        }
      }
    ]
  }
}